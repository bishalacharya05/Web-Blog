@model List<Blog.web.Models.Domain.Tag>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Show All Tags-Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	@if(Model !=null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>DisplayName</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var tag in Model)
				{
					<tr>
						<td>@tag.Id</td>
						<td>@tag.Name</td>
						<td>@tag.DisplayName</td>
						<td>
							<a class="btn btn-primary mx-2"  asp-area="" asp-control="AdminTags" asp-action="Edit" asp-route-id="@tag.Id"><i class="bi bi-pencil-square"></i>Edit</a>
						</td>
					</tr>
				}
			</tbody>
			
		</table>
	}
	else
	{
		<p>No Tags Found</p>
	}
</div>